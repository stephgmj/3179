{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 300,
    "config": {"view": {"stroke": "transparent"}},
    "title": "Major Wind Farms Victoria",
    "projection": {
      "type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/stephgmj/3179/refs/heads/main/vic_localities.json",
          "format": {
            "type": "topojson", 
            "feature": "vic_localities"
          }
        },
        "mark": {
          "type": "geoshape", 
          "fill": "yellowgreen", 
          "stroke": "white"
        }
      },
      {
          "data": {
            "url": "https://raw.githubusercontent.com/stephgmj/3179/refs/heads/main/renewable_energy_storage.csv"
          },
          "mark": {
            "type": "circle",
            "size": 100,
            "color": "darkgreen",
            "opacity": 0.8
          },
          "encoding": {
            "longitude": {
              "field": "longitude", 
              "type": "quantitative"
            },
            "latitude": {
              "field": "latitude", 
              "type": "quantitative"
            },
            "tooltip": [
              {
                "field": "NAME", 
                "type": "nominal", 
                "title": "Wind Farm"
              }
            ]
          }
        }]
      }