{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 200,
    "title": {"text": "Victoria's Yearly Energy Generation"},
    "data": {
        "url": "https://raw.githubusercontent.com/stephgmj/3179/refs/heads/main/generation%20over%20years.csv"
    },
    "params": [{
        "name": "pts",
        "select": {"type": "point", "fields": ["Energy Type"]}
      }],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Year", 
            "type": "ordinal"
        },
        "y": {
            "field": "Energy Generated (GWh)",
            "type": "quantitative"
        },
        "color": {
            "condition": {
                "param": "pts",
                "field": "Energy Type", "type": "nominal",
                "scale": {"scheme": "darkgreen", "reverse": true}
            },
            "value": "lightgrey"
        },
        "tooltip": [
            {
                "field": "Year",
                "type": "ordinal",
                "title": "Year"
            },
            {
                "field": "Energy Type",
                "type": "nominal",
                "title": "Energy Type"
            },
            {
                "field": "Energy Generated (GWh)",
                "type": "quantitative",
                "title": "Energy Generated (GWh)",
                "format": ".2f"
            }
        ]
    }
}